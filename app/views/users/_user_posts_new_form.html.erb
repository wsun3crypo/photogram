<%= form_with(model: @post, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :body %>

    <%= f.text_field :body, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :image %>

    <%= f.text_field :image, class: "form-control" %>
  </div>

  <%= f.hidden_field :users_id, value: @user.id %>

  <%= f.submit "Create post", class: "btn btn-block btn-outline-secondary" %>
<% end %>
