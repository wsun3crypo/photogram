<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Likes

    <a data-toggle="collapse" href="#photo_likes_new_form">
      Add like
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @photo.likes.each do |like| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <%= link_to like, like %>
        <!-- Show link end -->

        <!-- Delete link start -->
        <%= link_to like, method: :delete, data: { confirm: "Do you really want to delete this like" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="photo_likes_new_form">
        <!-- New associationcollection form start -->
        <%= render partial: "photos/photo_likes_new_form" %>
        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
