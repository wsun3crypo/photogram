<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Requests Sent

    <a data-toggle="collapse" href="#user_requests_sent_new_form">
      Add follow request
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.requests_sent.each do |follow_request| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to follow_request, follow_request %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_requests_sent_new_form">
        <%= render partial: "users/user_requests_sent_new_form" %>
      </div>
    </div>

  </ul>
</div>
